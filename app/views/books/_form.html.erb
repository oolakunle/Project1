<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => 'Title', :autofocus => true %>

  <%= f.label :year %>
  <%= f.number_field :year, :placeholder => 'Year of Publication' %>

  <%= f.label :author_id %>
<%= f.select :author_id, Author.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>
