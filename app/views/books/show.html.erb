<h1><%= @book.title %></h1>

<ul>
  <% if @book.author.present? %>
  <li><%= link_to @book.author.name, @book.author %></li>
  <% end %>
  <li><%= @book.year %></li>
</ul>

<div class="controls">
  <%= link_to 'Edit book', edit_book_path(@book) %>
  <%= link_to 'Delete book', @book, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
